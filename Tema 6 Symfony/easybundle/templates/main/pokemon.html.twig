{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <a href="/">Volver</a><br>

        <a href="/{{p.id}}">{{p.name}} </a>( {# se puede quitar el enlace #}
        {% for t in p.type %}
            {{t.name}}
        {% endfor %}
        )
        <br>
        {% if p.evolvedFrom != NULL %}
        Evoluciona de <a href="/{{p.evolvedFrom.id}}">{{p.evolvedFrom.name}}</a> {#.name porque el evolved devuelve un objeto pokemon#}
        {% endif %}
        <br>
        {% if p.evolvedTo != NULL %}
            {% for pokemon in p.evolvedTo %}
                Evoluciona a <a href="/{{pokemon.id}}">{{pokemon.name}}</a>
            {% endfor %}
        {% endif %}
        <br>
        <img src="/img/{{p.image}}" width="200px"/>
</div>
{% endblock %}
